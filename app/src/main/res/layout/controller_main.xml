<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bugtsa.casher.ui.activities.SingUpActivity">

    <TextView
        android:id="@+id/time_purchase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xx_small_8"
        android:text="@string/time_caption"
        app:layout_constraintBottom_toTopOf="@+id/purchases"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/price_purchase"
        app:layout_constraintTop_toBottomOf="@id/date_purchase"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/price_purchase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xx_small_8"
        android:text="@string/price_caption"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/time_purchase"
        app:layout_constraintRight_toLeftOf="@+id/category_purchase"
        app:layout_constraintTop_toBottomOf="@id/date_purchase"
        app:layout_constraintVertical_weight="1" />

    <TextView
        android:id="@+id/category_purchase"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_xx_small_8"
        android:text="@string/category_caption"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintLeft_toRightOf="@+id/price_purchase"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/date_purchase"
        app:layout_constraintVertical_weight="1" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/purchases"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/spacing_xx_small_8"
        android:layout_marginRight="@dimen/spacing_xx_small_8"
        android:layout_marginBottom="@dimen/spacing_normal_16"
        android:paddingBottom="@dimen/spacing_xx_small_8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/time_purchase"
        app:layout_constraintVertical_weight="1" />

    <ProgressBar
        android:id="@+id/progress_purchase"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="@dimen/spacing_xx_small_8"
        android:layout_marginTop="@dimen/spacing_xx_small_8"
        android:layout_marginEnd="@dimen/spacing_xx_small_8"
        android:layout_marginBottom="@dimen/spacing_xx_small_8"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/app_name"
        tools:visibility="visible" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_purchase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_add_black_24dp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/bottom_scroll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_normal_16"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_keyboard_arrow_down_black_24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>