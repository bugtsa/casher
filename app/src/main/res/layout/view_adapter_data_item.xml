<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/vRootLayData"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/spacing_normal_y_16"
    android:paddingEnd="@dimen/spacing_normal_y_16"
    tools:background="@color/primaryColor">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingTop="@dimen/spacing_normal_y_16"
        android:paddingBottom="@dimen/spacing_normal_y_16"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/vHolderLabel"
            style="@style/HolderLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Test title" />

        <TextView
            android:id="@+id/vHolderData"
            style="@style/HolderData"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            tools:text="Data text" />

    </LinearLayout>

    <ImageView
        android:id="@+id/vImageData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:srcCompat="@drawable/red_circle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>