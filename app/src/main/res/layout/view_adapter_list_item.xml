<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primaryColor"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingStart="@dimen/spacing_medium_z_24"
    android:paddingTop="@dimen/spacing_small_12"
    android:paddingEnd="@dimen/spacing_medium_z_24"
    android:paddingBottom="@dimen/spacing_small_12">

    <ImageView
        android:id="@+id/vHolderIcon"
        android:layout_width="@dimen/spacing_medium_z_24"
        android:layout_height="@dimen/spacing_medium_z_24"
        android:layout_marginEnd="@dimen/spacing_small_12"
        android:layout_marginRight="@dimen/spacing_small_12" />

    <TextView
        android:id="@+id/vHolderItemTitle"
        android:layout_width="@dimen/zeros"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:layout_marginEnd="@dimen/spacing_normal_y_16"
        android:layout_weight="1"
        android:textSize="@dimen/font_x_medium_16" />

    <TextView
        android:id="@+id/vHolderItemSubTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|start"
        android:textColor="@color/secondaryTextColor"
        android:textSize="@dimen/font_medium_14"
        android:visibility="gone"
        tools:text="@string/app_name"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/vHolderCounter"
        android:layout_width="@dimen/spacing_medium_z_24"
        android:layout_height="@dimen/spacing_medium_z_24"
        android:layout_gravity="center"
        android:layout_marginEnd="6dp"
        android:background="@drawable/red_circle"
        android:gravity="center"
        android:textColor="@color/primaryTextColor"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/vHolderArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:tint="@color/imageTint"
        app:srcCompat="@drawable/ic_arrow_right_24px" />

</LinearLayout>