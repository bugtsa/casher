<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="MatchWrap">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="MatchDouble">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="WrapDouble">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText" parent="MatchWrap">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:textSize">@dimen/font_medium_14</item>
    </style>

    <style name="TilPurchase" parent="MatchWrap">
        <item name="android:padding">@dimen/spacing_xx_small_8</item>
    </style>

    <style name="DatePurchase" parent="MatchWrap">
        <item name="android:layout_marginLeft">@dimen/spacing_xx_small_8</item>
        <item name="android:layout_marginRight">@dimen/spacing_xx_small_8</item>
        <item name="android:layout_marginTop">@dimen/spacing_xx_small_8</item>
        <item name="android:layout_marginBottom">@dimen/spacing_xx_small_8</item>
    </style>

    <style name="EditText.ManualCode">
        <item name="android:hint">@string/price_purchase</item>
    </style>

    <style name="EditText.Category">
        <item name="android:hint">@string/category_purchase</item>
        <item name="android:layout_marginLeft">@dimen/spacing_xx_small_8</item>
        <item name="android:layout_marginRight">@dimen/spacing_xx_small_8</item>
    </style>

    <style name="AccentButton" parent="Base.Widget.AppCompat.Button">
        <item name="colorButtonNormal">@color/colorAccent</item>
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="AccentText">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

</resources>
